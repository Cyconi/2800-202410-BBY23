<%- include("template/header") %>
    <style>
        .center-screen {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 80vh;
            /* This makes sure the container takes up the full height of the screen */
        }
    </style>
    <div class="container text-center">
        <h1>Study Page.</h1>
        <div class="row center-screen">
            <div class="col-md-4">
                <form action='/study/guides' method='POST'>
                    <button type="submit" class="btn btn-primary">Study Guides</button>
                </form>
            </div>
            <div class="col-md-4">
                <form action='/study/session' method='POST'>
                    <button type="submit" class="btn btn-primary">Study Session</button>
                </form>
            </div>
            <div class="col-md-4">
                <form action='/study/log' method='POST'>
                    <button type="submit" class="btn btn-primary">Study Log</button>
                </form>
            </div>
        </div>
    </div>

    <!-- ? Modal -->
    <div class="modal modal-sheet position-fixed p-4 py-md-5" tabindex="-1" role="dialog" id="modalFAQ">
        <div class="modal-dialog" role="document">
          <div class="modal-content rounded-4 shadow">
            <div class="modal-body p-5">
              <h2 class="fw-bold mb-0">What's new</h2>
              <ul class="d-grid gap-4 my-5 list-unstyled small">
                <li class="d-flex gap-4">
                    <img src="/img/success-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                  <div>
                    <h5 class="mb-0">Grid view</h5>
                    Not into lists? Try the new grid view.
                  </div>
                </li>
                <li class="d-flex gap-4">
                    <img src="/img/success-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                  <div>
                    <h5 class="mb-0">Bookmarks</h5>
                    Save items you love for easy access later.
                  </div>
                </li>
                <li class="d-flex gap-4">
                    <img src="/img/success-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                  <div>
                    <h5 class="mb-0">Video embeds</h5>
                    Share videos wherever you go.
                  </div>
                </li>
              </ul>
              <button type="button" class="btn btn-lg btn-primary mt-5 w-100" data-bs-dismiss="modal">Great, thanks!</button>
            </div>
          </div>
        </div>
      </div>
<%- include("template/footer") %>