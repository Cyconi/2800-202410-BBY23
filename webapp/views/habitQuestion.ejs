<%- include('template/header') %>

<style>
    .custom-button {
        font-size: 24px; /* Adjust as needed */
        padding: 10px 20px; /* Adjust as needed */
    }
    
    .btn:active {
        transform: scale(0.9); /* Makes the button slightly smaller when clicked */
        background-color: #00000000 !important; /* Change the color when clicked */
    }
</style>
<link rel="stylesheet" href="css/background.css">

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div style="display: flex; justify-content: center;">
                <div class="card bg-dark text-white" style="display: inline-block;">
                    <h1 class="text-center" style="margin: 10px;">
                      Habit Questions
                    </h1>
                </div>
              </div>

            <!-- <h1 class="text-center">
                Habit Questions
            </h1> -->
            <br>
            <% habits.forEach(habit => { %>
                <div class="card mb-3 alert <%= habit.good ? 'alert-success' : 'alert-danger' %>" role="alert">
                    <div class="card-body">
                        <h5 class="card-title">Habit: <%= habit.habit %>?<h5>
                        <p class="small text-muted">Habit Question: <%= habit.dailyQuestion %></p>
                        <div class="d-flex justify-content-between">
                            <form class="habit-form" style="display:inline;">
                                <input type="hidden" name="habitID" value="<%= habit.id %>">
                                <button type="button" class="btn btn-success" onclick="submitForm(this, '/habit/addFrequency')">üëç</button>
                            </form>
                            <form class="habit-form" style="display:inline;">
                                <input type="hidden" name="habitID" value="<%= habit.id %>">
                                <button type="button" class="btn btn-danger" onclick="submitForm(this, '/habit/thumbsDown')">üëé</button>
                            </form>                            
                        </div>
                    </div>
                </div>
            <% }); %>
            <div class="d-flex justify-content-center">
                <form action="/habit/indexRedirect" method="POST">
                    <button type="submit" id="doneButton" class="btn btn-primary mt-3 custom-button">Done</button>
                </form>
            </div>
        </div>
    </div>
</div>

<%- include('template/footer') %>

<script src="/js/habitC.js"></script>
