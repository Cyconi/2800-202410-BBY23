<%- include('template/header') %>

<link rel="stylesheet" href="css/background.css">
<link rel="stylesheet" href="css/home.css">

<link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <div style="display: flex; justify-content: center;">
                <div class="card bg-dark text-white" style="display: inline-block;">
                    <h4 class="text-center" style="margin: 10px;">
                        <%= user.username %>
                    </h4>
                </div>
            </div>
            <img id="user-avatar" src="<%= level == 1 ? '/img/avatar_lvl1.png' : '/img/avatar_lvl2.png' %>" alt="User Avatar" class="img-fluid">
        </div>
    </div>
    <% if (level == 1) { %>
        <h1>LEVEL 1</h1>
    <% } else { %>
        <h1>LEVEL 2</h1>
    <% } %>

    <div class="mt-4" id="hideable-section">
        <div class="row">
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar"
                            style="height: <%= user.interpersonalAmount %>%;"
                            aria-valuenow="<%= user.interpersonalAmount %>" aria-valuemin="0" aria-valuemax="100">
                        </div>
                    </div>
                    <div class="progress-text">
                        <h6 class="btn btn-dark text-white">
                            <%= user.interpersonalAmount %>
                        </h6>
                        <h6 class="btn btn-dark text-white">Confidence</h6>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: <%= user.knowledgeAmount %>%;"
                            aria-valuenow="<%= user.knowledgeAmount %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="progress-text ">
                        <h6 class="btn btn-dark text-white">
                            <%= user.knowledgeAmount %>
                        </h6>
                        <h6 class="btn btn-dark text-white">Knowledge</h6>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: <%= user.habitAmount %>%;"
                            aria-valuenow="<%= user.habitAmount %>" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                    <div class="progress-text">
                        <h6 class="btn btn-dark text-white">
                            <%= user.habitAmount %>
                        </h6>
                        <h6 class="btn btn-dark text-white">Discipline</h6>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

 <!-- Page info pop-up Modal -->
