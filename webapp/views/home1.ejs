<%- include('template/header') %>

<style>
    body {
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
        position: relative;
        overflow: hidden;
    }

    .img-fluid {
        max-width: 100%;
        width: 350px;
        height: auto; 
    }

    .progress {
        position: relative;
        width: 55px; 
        height: 200px; 
        margin: 20px auto;
        background-color: #ffffff;
        border: 3px solid black; 
        border-radius: 20px;
    }

    .progress-bar {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 0%; 
        background: linear-gradient(to top, #40afc8, #1e6cd2, #2d24d8, #150973);
        border-radius: 0 0 10px 10px;
        transition: height 0.6s ease;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .progress-label {
        margin-top: 10px;
    }

    .progress-text h4 {
        font-size: 2rem;
        color: #000000;
        font-weight: bold;
    }

    .progress-text p {
        font-size: 1.2rem;
        color: #000000;
        font-weight: bold;
    }

</style>
<link rel="stylesheet" href="css/background.css">

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <h1><%= user.username %></h1>
            <img id="user-avatar" src="/img/avatar_lvl1.png" alt="User Avatar" class="img-fluid"> 

            <div style="display: flex; justify-content: center;">
                <div class="card bg-dark text-white" style="display: inline-block;">
                    <h4 class="text-center" style="margin: 10px;">
                        <%= user.username %>
                    </h4>
                </div>
              </div>

            <!-- <h1><%= user.username %></h1> -->
            <img src="/img/avatar2.png" alt="User Avatar" class="img-fluid"> 
        </div>
    </div>
    <% if (level == 1) { %>
        LEVEL 1 USER!
    <% } else { %>
            LEVEL 2 USER!
    <% } %>
 
    <div class="mt-4" id="hideable-section">
        <div class="row">
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: <%= user.interpersonalAmount %>%;" aria-valuenow="<%= user.interpersonalAmount %>" aria-valuemin="0" aria-valuemax="500"></div>
                    </div>
                    <div class="progress-text">
                        <h4><%= user.interpersonalAmount %></h4>
                        <p class="mb-0 text-muted">Confidence</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: <%= user.knowledgeAmount %>%;" aria-valuenow="<%= user.knowledgeAmount %>" aria-valuemin="0" aria-valuemax="500"></div>
                    </div>
                    <div class="progress-text">
                        <h4><%= user.knowledgeAmount %></h4>
                        <p class="mb-0 text-muted">Knowledge</p>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="mt-3">
                    <div class="progress">
                        <div class="progress-bar" role="progressbar" style="height: <%= user.consistentAmount %>%;" aria-valuenow="<%= user.consistentAmount %>" aria-valuemin="0" aria-valuemax="500"></div>
                    </div>
                    <div class="progress-text">
                        <h4>1125</h4>
                        <p class="mb-0 text-muted">Discipline</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('template/footer') %>

<script>
    document.addEventListener('DOMContentLoaded', (event) => {
        const avatar = document.getElementById('user-avatar');
        const hideableSection = document.querySelector('.mt-4');
        const triggerWord = "betteru";
        let typedInput = "";

        document.addEventListener('keydown', (e) => {
            typedInput += e.key;
            if (typedInput.includes(triggerWord)) {
                avatar.src = '/img/giphy.gif'; 
                hideableSection.style.display = 'none';
                typedInput = "";
            }
        });

        window.addEventListener('beforeunload', () => {
            typedInput = "";
        });
    });
</script>
