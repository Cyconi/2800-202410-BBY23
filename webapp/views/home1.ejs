<%- include('template/header') %>

<style>
    .container {
        margin-top: 20px;
    }

    .img-fluid {
        max-width: 100%;
        height: auto;
    }

    .progress-vertical {
        position: relative;
        width: 50px; 
        height: 150px; 
        margin: 20px auto;
        background-color: #e9ecef;
        border: 3px solid black; 
        border-radius: 20px; 
    }

    .progress-bar-vertical {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 0%;
        background-color: #007bff; 
        border-radius: 10px;
    }

    .text-center {
        text-align: center;
    }

    .mt-4 {
        margin-top: 1.5rem;
    }

    .progress-label {
        margin-top: 10px;
    }
</style>

<div class="container text-center">
    <div class="row">
        <div class="col-12">
            <h1><%= user.username %></h1>
            <img src="/path/to/avatar-image.png" alt="User Avatar" class="img-fluid" style="max-width: 200px;">
        </div>
    </div>
    <div class="row mt-4">
        <div class="col-4">
            <div class="progress-vertical">
                <div class="progress-bar-vertical" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="progress-label">Discipline</p>
        </div>
        <div class="col-4">
            <div class="progress-vertical">
                <div class="progress-bar-vertical" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="progress-label">Confidence</p>
        </div>
        <div class="col-4">
            <div class="progress-vertical">
                <div class="progress-bar-vertical" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <p class="progress-label">Knowledge</p>
        </div>
    </div>
</div>

<%- include('template/footer') %>
