<%- include("template/header") %>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-6">
            <h1 class="text-center mb-4">Add A Habit</h1>
            <% if (good) { %>
                <form action='/habit/goodAdd' method='POST'>
            <% } else { %>
                <form action='/habit/badAdd' method='POST'>
            <% } %>
                <br><br>
                <div class="mb-3">
                    <label for="habit" class="form-label">Your Habit e.g., "I smoke"</label>
                    <input type="text" id="habit" name="habit" class="form-control" placeholder="Enter a habit">
                </div>
                <br><br>
                <div class="mb-3">
                    <label for="question" class="form-label">Daily Question e.g., "Did you smoke today?"</label>
                    <input type="text" id="question" name="question" class="form-control" placeholder="Daily question we ask you">
                </div>
                <br><br>
                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

<%- include("template/footer") %>
