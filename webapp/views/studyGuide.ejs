<%- include("template/header") %>

<link rel="stylesheet" href="css/studyPage.css">
<link rel="stylesheet" href="css/background.css">

<div class="container text-center">

  <div style="display: flex; justify-content: center; padding-bottom: 20px;">
    <div class="card bg-dark text-white" style="display: inline-block;">
        <h1 class="text-center" style="margin: 10px;">
          Study Guides
        </h1>
    </div>
  </div>

  <div class="row center-screen">
      <!-- Pomodoro Method Card -->
      <div class="col-md-4 mb-4">
        <div class="card study-card btn-scenario">
              <div class="card-header">
                  <button class="btn btn-link text-white help-button" onclick="toggleCard(this.parentElement.parentElement)">
                    <span class="material-symbols-outlined">help</span>
                  </button>
                  <img src="/img/pomodoro.png" data-static="/img/pomodoro.png" data-gif="/img/pomodoro(gif).gif" alt="Pomodoro Method image" class="card-image" />
                  <h5 class="card-title">Pomodoro Method</h5>
                  <button class="btn btn-primary" onclick="event.stopPropagation(); openPage('/study/pomodoro')">Open Pomodoro Guide</button>
              </div>
              <div class="card-body studycard">
                  <p class="card-text">Utilize short breaks to maintain long term focus.</p>
              </div>
          </div>
      </div>
      <!-- Active Recall Card -->
      <div class="col-md-4 mb-4">
        <div class="card study-card btn-scenario">
              <div class="card-header">
                  <button class="btn btn-link text-white help-button" onclick="toggleCard(this.parentElement.parentElement)">
                    <span class="material-symbols-outlined">help</span>
                  </button>
                  <img src="/img/recall.png" data-static="/img/recall.png" data-gif="/img/recall(gif).gif" alt="Active Recall image" class="card-image" />
                  <h5 class="card-title">Active Recall</h5>
                  <button class="btn btn-primary" onclick="event.stopPropagation(); openPage('/study/actRecall')">Open Active Recall Guide</button>
              </div>
              <div class="card-body studycard">
                  <p class="card-text">Train your memory to recall important information on any topic.</p>
              </div>
          </div>
      </div>
      <!-- Feynman Technique Card -->
      <div class="col-md-4 mb-4">
        <div class="card study-card btn-scenario">
              <div class="card-header">
                  <button class="btn btn-link text-white help-button" onclick="toggleCard(this.parentElement.parentElement)">
                    <span class="material-symbols-outlined">help</span>
                  </button>
                  <img src="/img/feynman.png" data-static="/img/feynman.png" data-gif="/img/feynman(gif).gif" alt="Feynman Technique image" class="card-image" />
                  <h5 class="card-title">Feynman Technique</h5>
                  <button class="btn btn-primary" onclick="event.stopPropagation(); openPage('/study/feynman')">Open Feynman Guide</button>
              </div>
              <div class="card-body studycard">
                  <p class="card-text">Practice teaching your studies to others to understand even better for yourself.</p>
              </div>
          </div>
      </div>
  </div>
</div>

<script>

     /**
     * Function to toggle the card expansion and switch between static and GIF images
     * 
     * This function was created with the help of ChatGPT.
     */
  function toggleCard(card) {
      card.classList.toggle('expanded');
      // Select the image element within the card
      var img = card.querySelector('.card-image');
      if (card.classList.contains('expanded')) {
         // Change to GIF image when expanded
          img.src = img.dataset.gif;
          // Add the 'gif-image' class
          img.classList.add('gif-image');
          // Remove the 'static-image' class;
          img.classList.remove('static-image');
      } else {
          // Change to static image when collapsed
          img.src = img.dataset.static;
          // Add the 'static-image' class
          img.classList.add('static-image');
          // Remove the 'gif-image' class
          img.classList.remove('gif-image');
      }
  }

  // Function to open a new page when a guide is clicked
  function openPage(url) {
      window.location.href = url;
  }
</script>

<%- include("template/footer") %>
