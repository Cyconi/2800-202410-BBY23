<%- include("template/header") %>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Reset Password</h1>
                    <form id="resetPasswordForm" action="/reset/<%= token %>" method="post">
                        <div class="mb-3">
                            <label for="password" class="form-label">New Password:</label>
                            <input type="password" name="password" id="password" class="form-control" required>
                        </div>
                        <div class="mb-3">
                            <label for="confirmPassword" class="form-label">Confirm New Password:</label>
                            <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal popup -->
<div class="modal modal-sheet position-fixed top-0 start-0 p-4 py-md-5" tabindex="-1" role="dialog" id="modalTour">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content rounded-4 shadow-lg">
            <div class="modal-body p-5 text-center">
                <img src="/img/reset.png" alt="Success Icon" class="mb-4 img-fluid">
                <h2 class="fw-bold mb-4">Password Reset!</h2>
                <p class="mb-4 fs-5">Your password has been reset successfully.</p>
                <button id="modalButton" type="button" class="btn btn-lg btn-primary">Continue</button>
            </div>
        </div>
    </div>
</div>

<%- include("template/footer") %>