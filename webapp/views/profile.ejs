<%- include('template/header') %>
<link rel="stylesheet" href="css/profile.css">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container profile-container">
    <div class="content">
        <div class="container">
            <div class="row">
                <!-- end col -->
            </div>
            <!-- end row -->
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="text-center card-box">
                        <div class="member-card pt-2 pb-2">
                            <div class="thumb-lg member-thumb mx-auto">
                                <img src="https://bootdey.com/img/Content/avatar/avatar2.png" class="rounded-circle img-thumbnail profile-image" alt="profile-image">
                            </div>
                            <div class="">
                                <h4 class="user-name"><%= user.name %></h4>
                                <p class="text-muted"><span class="username">@<%= user.username %></span> <span>| </span><span class="text-pink user-email"> <%= user.email %> </span></p>
                            </div>
                            <button class="btn btn-primary mt-3 btn-rounded waves-effect w-md waves-light">Edit Profile</button>
                            <div class="mt-4">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4>2563</h4>
                                            <p class="mb-0 text-muted">Interpersonal Points</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4><%= user.knowledgeAmount %></h4>
                                            <p class="mb-0 text-muted">Knowledge</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4>1125</h4>
                                            <p class="mb-0 text-muted">Consistent Points</p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
        </div>
    </div>
</div>

<!-- Edit button Modal -->
<div class="modal modal-sheet position-fixed p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <h1 class="fw-bold mb-0 fs-2">Edit Profile</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div class="modal-body p-5 pt-0">
          <form>
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="floatingInput" placeholder="name" value="<%= user.name %>">
              <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="floatingPassword" placeholder="username" value="<%= user.username %>">
              <label for="floatingPassword">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control rounded-3" id="floatingEmail" placeholder="name@example.com" value="<%= user.email %>">
                <label for="floatingEmail">Email</label>
            </div>
            
            <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
</div>

<script src="/js/profileC.js"></script>
<%- include('template/footer') %>
