<%- include('template/header') %>

<link rel="stylesheet" href="css/profile.css">
<link rel="stylesheet" href="css/background.css">
<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">

<div class="container profile-container">
    <div class="content">
        <div class="container">
            <div class="row">
            </div>
            <div class="row justify-content-center">
                <div class="col-lg-4">
                    <div class="text-center card-box">
                        <div class="member-card pt-2 pb-2">
                          <div class="thumb-lg member-thumb mx-auto profile-image-container">
                            <div class="profile-image" style="background-image: url('<%= level == 1 ? '/img/avatar_lvl1.png' : '/img/avatar_lvl2.png' %>');"></div>
                          </div>
                            <div class="">
                                <h4 class="user-name"><%= user.name %></h4>
                                <% if (level == 1) { %>
                                  <h4>LEVEL 1</h4>
                                <% } else { %>
                                  <h4>LEVEL 2</h4>
                                <% } %>
                                <p class="text-muted"><span class="username">@<%= user.username %></span> <span>| </span><span class="text-pink user-email"> <%= user.email %> </span></p>
                            </div>
                            <button class="btn btn-primary mt-3 btn-rounded waves-effect w-md waves-light">Edit Profile</button>
                            <div data-bs-toggle="modal" data-bs-target="#DeleteAccountWarning">
                              <button class="btn btn-danger mt-3 btn-rounded waves-effect w-md waves-light">Delete Account</button>
                            </div>
                            <div class="mt-4">
                                <div class="row">
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4><%= user.interpersonalAmount %></h4>
                                            <p class="mb-0 text-muted">Confidence</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                        <div class="mt-3">
                                            <h4><%= user.knowledgeAmount %></h4>
                                            <p class="mb-0 text-muted">Knowledge</p>
                                        </div>
                                    </div>
                                    <div class="col-4">
                                      <div class="mt-3">
                                          <h4><%= user.habitAmount %></h4>
                                          <p class="mb-0 text-muted">Discipline</p>
                                      </div>
                                  </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- end col -->
            </div>
        </div>
    </div>
</div>

<!-- Profile edit button Pop-up Modal -->
<div class="modal modal-sheet position-fixed p-4 py-md-5" tabindex="-1" role="dialog" id="modalSignin">
    <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
        <div class="modal-header p-5 pb-4 border-bottom-0">
          <h1 class="fw-bold mb-0 fs-2">Edit Profile</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
  
        <div class="modal-body p-5 pt-0">
          <form>
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="floatingInput" placeholder="name" value="<%= user.name %>">
              <label for="floatingInput">Name</label>
            </div>
            <div class="form-floating mb-3">
              <input type="text" class="form-control rounded-3" id="floatingPassword" placeholder="username" value="<%= user.username %>">
              <label for="floatingPassword">Username</label>
            </div>
            <div class="form-floating mb-3">
                <input type="email" class="form-control rounded-3" id="floatingEmail" placeholder="name@example.com" value="<%= user.email %>">
                <label for="floatingEmail">Email</label>
            </div>
            
            <button class="w-100 mb-2 btn btn-lg rounded-3 btn-primary" type="submit">Save Changes</button>
          </form>
        </div>
      </div>
    </div>
</div>

<!-- Page info pop-up Modal -->
<div class="modal modal-sheet position-fixed p-4 py-md-5" tabindex="-1" role="dialog" id="modalFAQ">
  <div class="modal-dialog" role="document">
    <div class="modal-content rounded-4 shadow">
      <div class="modal-body p-5">
        <h2 class="fw-bold mb-0">Manage the Profile Page</h2>
        <ul class="d-grid gap-4 my-5 list-unstyled small">
          <li class="d-flex gap-4">
            <div>
              <h5 class="mb-0">How to Use</h5>
              <ul>
                <li>Around the profile picture, you'll see your display name, username and email that you entered in the sign up window.</li>
              </ul>
            </div>
          </li>
          <li class="d-flex gap-4">
            <div>
              <h5 class="mb-0">What are the points at the bottom?</h5>
              <ul>
                <li>The confidence points represents your use of the interpersonal section.</li>
                <li>The discipline points represents your use of the habit tracker and consistent use of the daily MCQ's</li>
                <li>The knowledge points represents your use of the study section by having study sessions and logging them.</li>
              </ul>
            </div>
          </li>
          <li class="d-flex gap-4">
            <div>
              <h5 class="mb-0">Want to change your info?</h5>
              <ul>
                <li>Click on the 'Edit Profile' button in order to change your information.</li>
              </ul>
            </div>
          </li>
        </ul>
        <button type="button" class="btn btn-lg btn-primary mt-5 w-100" data-bs-dismiss="modal">Great, thanks!</button>
      </div>
    </div>
  </div>
</div>

<!-- Delete Account Confirmation Pop-Up Modal -->
<div class="modal modal-sheet position-fixed p-4 py-md-5" tabindex="-1" role="dialog" id="DeleteAccountWarning">
  <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
          <div class="modal-header border-bottom-0">
              <h1 class="modal-title fs-5">Delete Account?</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
          </div>
          <div class="modal-body py-0">
              <p id="duplicateModalBody">Are you sure you want to delete your account? This action is irreversible.</p>
          </div>
          <div class="modal-footer flex-column align-items-stretch w-100 gap-2 pb-3 border-top-0">
            <form action='/profile/deleteUser' method='POST'>
              <button type="submit" class="btn btn-lg btn-danger w-100">Delete Account</button>
            </form>
            <button type="button" class="btn btn-lg btn-secondary w-100" data-bs-dismiss="modal">Cancel</button>
          </div>
      </div>
  </div>
</div>

<script>
  var faqItem = 0;
</script>
<script src="/js/profileC.js"></script>
<%- include('template/footer') %>
