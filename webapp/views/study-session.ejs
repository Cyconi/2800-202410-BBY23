<%- include("template/header") %>
<link rel="stylesheet" href="css/study-session.css">

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <span class="mx-auto">Study Session</span>
    </div>
</nav>

<div class="container mt-4">
    <div class="timer-container">
        <div class="timer-display" id="demo">0h 0m 0s</div>
        <div class="timer-section">
            <div class="text-display">hr</div>
            <input type="number" id="hoursInput" placeholder="H" min="0" max="23" value="0">
        </div>
        <div class="timer-section">
            <div class="text-display">min</div>
            <input type="number" id="minutesInput" placeholder="M" min="0" max="59" value="0">
        </div>
        <div class="timer-section">
            <div class="text-display">sec</div>
            <input type="number" id="secondsInput" placeholder="S" min="0" max="59" value="0">
        </div>
        <br>
        <br>
        <button id="startStopBtn" onclick="startStop()">Start</button>
        <button onclick="resetTimer()">Reset</button>
    </div>

    <form action="/log-study-session" method="POST" class="mt-4">
        <div class="mb-3">
            <label for="subject" class="form-label">Subject</label>
            <input type="text" class="form-control" id="subject" name="subject" required>
        </div>
        <div class="mb-3">
            <label for="duration" class="form-label">Duration (in minutes)</label>
            <input type="number" class="form-control" id="duration" name="duration" required>
        </div>
        <div class="mb-3">
            <label for="notes" class="form-label">Notes</label>
            <textarea class="form-control" id="notes" name="notes" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Log Study Session</button>
        <br>
        <br>
        <br>
        <br>
    </form>
</div>

<script src="js/timer.js"></script>

<%- include("template/footer") %>
