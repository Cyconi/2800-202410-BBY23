<%- include('template/header') %>
<style>
  .gradient-custom-2 {
    background: #fccb90;
    background: -webkit-linear-gradient(to right, #40afc8, #1e6cd2, #2d24d8, #150973);
    background: linear-gradient(to right, #40afc8, #1e6cd2, #2d24d8, #150973);
  }

  /* Remove because cause overflow and does not affect mobile page */
  /* @media (min-width: 768px) {
