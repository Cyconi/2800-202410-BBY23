  <div class="modal-dialog" role="document">
      <div class="modal-content rounded-4 shadow">
          <div class="modal-body p-5">
              <h2 class="fw-bold mb-0">Login Failed</h2>
              <ul class="d-grid gap-4 my-5 list-unstyled small">
                  <li class="d-flex gap-4">
                      <img src="/img/loginFail.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                      <div>
                          <h5 class="mb-0">
                            <span id="errorMessageH"></span> Incorrect!
                          </h5>
                          <!-- You have inputted the <span id="errorMessage"></span> please try again. -->
                          The <span id="errorMessageB"></span> you have entered is incorrect. Please try again.
                      </div>
                  </li>
              </ul>
              <button type="button" class="btn btn-lg btn-primary mt-5 w-100" id="errorButton" data-bs-dismiss="modal">Try Again</button>
          </div>
      </div>
  </div>
</div>

