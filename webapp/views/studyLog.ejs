<%- include("template/header") %>
<link rel="stylesheet" href="css/studyLog.css">

<style>
    body {
       font-family: 'Arial', sans-serif;
       background: url('img/stars.png') no-repeat center center fixed;
       background-size: cover;
       margin: 0;
       padding: 0;
       position: relative;
       overflow: hidden; /* Ensure the pseudo-element covers the entire viewport */
   }
   
   body::before {
       content: "";
       position: absolute;
       top: 0;
       left: 0;
       width: 100%;
       height: 100%;
       background: rgba(255, 255, 255, 0.5); /* Semi-transparent white overlay */
       z-index: -1;
       pointer-events: none; /* Ensure the pseudo-element does not interfere with any interactions */
   }
   
   .container {
       position: relative; /* Ensure the container is positioned relative to the pseudo-element */
       z-index: 1;
   }
   
   </style>

<nav class="navbar navbar-light bg-light">
    <div class="container-fluid">
        <span class="mx-auto">Study Log</span>
    </div>
</nav>

<div class="container mt-4">
    <div class="row">
        <% sessions.forEach(session => { %>
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title"><%= session.subject %></h5>
                        <h6 class="card-subtitle mb-2 text-muted"><%= session.duration %> minutes</h6>
                        <p class="card-text"><%= session.notes %></p>
                        <p class="card-text"><small class="text-muted"><%= session.date.toLocaleString() %></small></p>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</div>

<%- include("template/footer") %>
