<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/img/betterU.ico" rel="icon" type="image/x-icon" />
    <title>Better U</title>

    <!-- Google Icons/Symbols -->
    <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <!-- BootStrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

    <!-- CSS -->
    <link rel="stylesheet" href="/css/sidebar.css">
</head>

<body>
    <nav class="navbar fixed-top" style="pointer-events: none;">
        <div class="container-fluid d-flex justify-content-between">

            <a id="navbar-toggle" class="navbar-brand" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button"
                aria-controls="offcanvasExample">
                <span class="material-symbols-outlined" alt="Sidebar" width="24" height="24"
                    class="d-inline-block align-text-top" style="pointer-events: auto;"">menu</span>
            </a>
            <a class=" mx-auto" role="button" id="faqButton" style="display: none; pointer-events: auto;">
                    <span class="material-symbols-outlined d-inline-block align-text-top" width="24"
                        height="24">help</span>
            </a>
            <a role="button" onclick="goBack()" style="pointer-events: auto;">
                <!-- <img src="/img/back-arrow.png" alt="Sidebar" width="24" height="24" class="d-inline-block align-text-top"> -->
                <span class="material-symbols-outlined" width="24" height="24">arrow_circle_left</span>
            </a>
        </div>
    </nav>
    <br><br><br>
    <div class="offcanvas offcanvas-start sidebarBg" tabindex="-1" id="offcanvasExample"
        aria-labelledby="offcanvasExampleLabel">
        <div class="offcanvas-header">
            <form class="hug-left" action='/habit/habitQuestion' method='POST'>
                <button type="submit" id="expl-icon" class="btn"><img src="/img/expl.png" alt="EXO" width="24"
                        height="24"></button>
            </form>
            <a href="/home1">
                <img src="/img/better_u_logo.png" alt="Better U Logo" width="150" height="150" class="mb-3">
            </a>
            <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body">
            <nav class="nav flex-column">
                <a class="nav-link text-black" href="/home1">
                    <span class="material-symbols-outlined">home</span>
                    Home Page
                </a>
                <a class="nav-link text-black" href="/chat">
                    <span class="material-symbols-outlined">
                        chat_bubble
                    </span>
                    Chat Room
                </a>
                <a class="nav-link text-black" href="/interpersonal/select-scenario">
                    <span class="material-symbols-outlined">groups</span>
                    Interpersonal Practice
                </a>
                <a class="nav-link text-black" href="/habit">
                    <span class="material-symbols-outlined">sports_handball</span>
                    Habit Tracker
                </a>
                <a class="nav-link text-black" href="/study">
                    <span class="material-symbols-outlined">book_4</span>
                    Study Improver
                </a>
                <a class="nav-link text-black" href="/profile">
                    <span class="material-symbols-outlined">account_circle</span>
                    Profile
                </a>
                <form action="/logout" method="post" class="nav-link">
                    <button type="submit" class="btn btn-danger">Logout</button>
                </form>
            </nav>
        </div>
    </div>
    <script>
        const navBar = document.getElementById('navbar-toggle');
        fetch('/checkAuth', {
            method: "POST"
        })
            .then(response => response.json())
            .then(data => {
                if (!data.success) {
                    navBar.style.display = 'none';
                }
            })
            .catch(error => {
                console.error('Error:', error.message);
            });

    </script>