<!-- Timer popup Modal -->
<div class="modal modal-sheet position-fixed top-0 start-0 p-4 py-md-5" tabindex="-1" role="dialog" id="timer">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-body p-5">
                <h2 class="fw-bold mb-0">Times Up!</h2>
                <ul class="d-grid gap-4 my-5 list-unstyled small">
                    <li class="d-flex gap-4">
                        <img src="/img/success-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                        <div>
                            <h5 class="mb-0">Break time! Take a 5-minute break.</h5>
                            <br>
                            <div class="timer-container">
                                <div class="timer-display" id="break">0h 5m 0s</div>
                                <div class="timer-section">
                                    <div class="text-display">hr</div>
                                    <input type="number" id="breakHoursInput" placeholder="H" min="0" max="23" value="0">
                                </div>
                                <div class="timer-section">
                                    <div class="text-display">min</div>
                                    <input type="number" id="breakMinutesInput" placeholder="M" min="0" max="59" value="5">
                                </div>
                                <div class="timer-section">
                                    <div class="text-display">sec</div>
                                    <input type="number" id="breakSecondsInput" placeholder="S" min="0" max="59" value="0">
                                </div>
                                <br><br>
                                <button id="breakStartStopBtn" class="btn-timer" onclick="breakStartStop()">Start</button>
                                <button class="btn-timer" onclick="breakResetTimer()">Reset</button>
                            </div>
                        </div>
                    </li>
                </ul>
                <button type="button" class="btn btn-lg btn-primary mt-5 w-100" data-bs-dismiss="modal">Great, thanks!</button>
            </div>
        </div>
    </div>
</div>

