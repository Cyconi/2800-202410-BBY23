<%- include("template/header") %>
<link rel="stylesheet" href="css/studySession.css">
<link rel="stylesheet" href="css/background.css">

<div class="container mt-4 studybody">
    <div class="timer-container">
        <div class="timer-display" id="demo">0h 0m 0s</div>
        <div class="timer-section">
            <div class="text-display">hr</div>
            <input type="number" id="hoursInput" placeholder="H" min="0" max="23" value="0">
        </div>
        <div class="timer-section">
            <div class="text-display">min</div>
            <input type="number" id="minutesInput" placeholder="M" min="0" max="59" value="0">
        </div>
        <div class="timer-section">
            <div class="text-display">sec</div>
            <input type="number" id="secondsInput" placeholder="S" min="0" max="59" value="0">
        </div>
        <br>
        <br>
        <button id="startStopBtn" class="btn-timer" onclick="startStop()">Start</button>
        <button class="btn-timer" onclick="resetTimer()">Reset</button>
    </div>

    <form id="logSessionForm" class="study-log-form mt-5">
        <h2 class="text-center mb-4">Log Your Session</h2>
        <div class="form-group">
            <label for="subject">Subject</label>
            <input type="text" name="subject" class="form-control" placeholder="Enter your Subject" required>
        </div>
        <div class="form-group">
            <label for="duration">Duration (in minutes)</label>
            <input type="number" name="duration" class="form-control" required>
        </div>
        <div class="form-group">
            <label for="notes">Notes</label>
            <textarea name="notes" class="form-control" placeholder="Write some notes" rows="4" required></textarea>
        </div>
        <br>
        <button type="submit" class="btn btn-primary w-100">Log Study Session</button>
    </form>
</div>

<!-- Cannot Enter Negative minutes Pop-Up Modal (Bootstrap) -->
<div class="modal modal-sheet position-fixed top-0 start-0 p-4 py-md-5 modal-custom" tabindex="-1" role="dialog" id="responseModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-body p-5">
                <h2 class="fw-bold mb-0">Error!</h2>
                <ul class="d-grid gap-4 my-5 list-unstyled small">
                    <li class="d-flex gap-4">
                        <img src="/img/fail-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                        <div>
                            <h5 class="mb-0">Invalid Input</h5>
                            <div id="responseModalBody">
                                <p>You can not enter a negative number for your "Duration". Please try again.</p>
                            </div>
                        </div>
                    </li>
                </ul>
                <button type="button" class="btn btn-lg btn-primary mt-5 w-100" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Study Logged Pop-Up Modal (Bootstrap) -->
<div class="modal modal-sheet position-fixed top-0 start-0 p-4 py-md-5 modal-custom" tabindex="-1" role="dialog" id="studyLoggedModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content rounded-4 shadow">
            <div class="modal-body p-5">
                <h2 class="fw-bold mb-0">Success</h2>
                <ul class="d-grid gap-4 my-5 list-unstyled small">
                    <li class="d-flex gap-4">
                        <img src="/img/success-icon.png" alt="Icon" width="48" height="48" class="text-body-secondary flex-shrink-0">
                        <div>
                            <h5 class="mb-0">Logged Successfully</h5>
                            <div id="responseModalBody">
                                <p>The study session has successfully been logged.</p>
                            </div>
                        </div>
                    </li>
                </ul>
                <button type="button" class="btn btn-lg btn-primary mt-5 w-100" id="successButton">Close</button>
            </div>
        </div>
    </div>
</div>
<script src="js/ClientSideProfile.js"></script>
<script>
    var timeLeft = <%= timeLeft %>;
    var isPaused = <%= isPaused %>; 
</script>
<script src="js/timer.js"></script>

<%- include("template/footer") %>
